@model ProductComparisonApp.ViewModels.ProductComparisonViewModel<ProductComparisonApp.Models.Mouse>
@{
    ViewData["Title"] = Model.CategoryName;
}
<h2>@Model.CategoryName</h2>

<form method="post">
    <table class="table table-bordered table-hover table-striped">
        <thead>
            <tr>
                <th>Select</th>
                <th>Image</th>
                <th><a asp-action="Index" asp-route-sortBy="Name">Name</a></th>
                <th><a asp-action="Index" asp-route-sortBy="Brand">Brand</a></th>
                <th><a asp-action="Index" asp-route-sortBy="Price">Price</a></th>
                <th><a asp-action="Index" asp-route-sortBy="Wireless">Wireless</a></th>
                <th><a asp-action="Index" asp-route-sortBy="Connection">Connection</a></th>
                <th><a asp-action="Index" asp-route-sortBy="DPI">DPI</a></th>
                <th><a asp-action="Index" asp-route-sortBy="Buttons">Buttons</a></th>
                <th><a asp-action="Index" asp-route-sortBy="Weight">Weight</a></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model.Products)
            {
                <tr>
                    <td><input type="checkbox" name="SelectedProductIds" value="@product.Id" /></td>
                    <td>
                        <img src="@Url.Content(product.ImageUrl)" alt="@product.Name" width="60" class="rounded-img" />
                    </td>
                    <td>@product.Name</td>
                    <td>@product.Brand</td>
                    <td>@product.Price.ToString("C")</td>
                    <td>@(product.IsWireless ? "Yes" : "No")</td>
                    <td>@product.ConnectionType</td>
                    <td>@product.DPI</td>
                    <td>@product.ButtonCount</td>
                    <td>@product.WeightGrams</td>
                </tr>
            }
        </tbody>
    </table>
</form>
