<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>PCA - @ViewData["Title"]</title>

    <!-- Bootstrap -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <!-- Custom styles -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ProductComparisonApp.styles.css" asp-append-version="true" />

    <!-- Google Fonts (optional, за по-модерен вид) -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600&display=swap" rel="stylesheet">
</head>
<body class="bg-dark text-light" style="font-family: 'Inter', 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;">

    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-black mb-4 shadow-sm">
            <div class="container-fluid">
                <a class="navbar-brand" href="/">ProductComparisonApp</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarProducts"
                        aria-controls="navbarProducts" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarProducts">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item"><a class="nav-link" asp-controller="Headphones" asp-action="Index">Headphones</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Mice" asp-action="Index">Mice</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Keyboards" asp-action="Index">Keyboards</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Monitors" asp-action="Index">Monitors</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Microphones" asp-action="Index">Microphones</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Webcams" asp-action="Index">Webcams</a></li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="main-wrapper">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted mt-4">
        <div class="container text-center py-3">
            &copy; 2025 - ProductComparisonApp -
            <a asp-area="" asp-controller="Home" asp-action="Privacy" class="text-decoration-none text-light">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
